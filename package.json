{
  "name": "codes-count",
  "private": "true",
  "version": "1.0.8",
  "description": "Your daily codes statistics",
  "main": "lib/index.js",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "ncc build src/index.ts -o lib -m",
    "lint": "eslint src/**",
    "format": "prettier --write src/** action.yml README.md",
    "format:check": "prettier --check src/** action.yml README.md",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^7.0.2",
    "@vercel/ncc": "^0.38.1",
    "bun-types": "latest",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "moment": "^2.30.1"
  },
  "license": "MIT",
  "keywords": [
    "codes-count",
    "github-actions"
  ],
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun run format"
  },
  "engines": {
    "node": ">=18"
  }
}
